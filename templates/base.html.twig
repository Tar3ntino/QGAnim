<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`and uncomment the following Encore helpers to start using Symfony UX #}

		<!-- Bootstrap CSS CDN -->
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

		<!-- Our Custom CSS -->
		<link rel='stylesheet' type='text/css' media='screen' href="{{ asset('css/styles.css') }}">

		<!-- Front awesome CDN - Pour Icone Menu Burger -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">

		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<header id="navbar">
            <nav id="navHead"> 
                <div class="row">
                    <div class="col-5"></div>
                    <div class="col-2">
                        <img src="/images/logoheader.png" alt="">
                    </div>
                    <div class="col-5">
                        <ul id="liensConnection">
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <li>
                                    <a href="{{path('users')}}">Mon compte</a>
                                </li>
                                <li>
                                    <a href="{{path('app_logout')}}">Se déconnecter</a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{path('app_register')}}">S'inscrire</a>
                                </li>
                                <li>
                                    <a href="{{path('app_login')}}">Se connecter</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
			<nav class="navbar-container container">
                <!-- Bouton menu burger : -->
				<button type="button" class="navbar-toggle" aria-label="Open navigation menu">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

                <!-- Menu gauche déroulant: -->
				<div class="navbar-menu left sidebar">
					<ul class="navbar-links">
						<li class="navbar-item">
							<a class="navbar-link" href="{{path('app_home')}}">Accueil</a>
						</li>
						<li class="navbar-item">
							<a class="navbar-link" href="{{path('app_presentation')}}">Présentation</a>
						</li>
						<li class="navbar-item">
							<a class="navbar-link" href="{{path('app_animations')}}">Animation</a>
						</li>
						<li class="navbar-item">
							<a class="navbar-link" href="{{path('app_contact')}}">Contact</a>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li class="navbar-item">
								<a class="navbar-link" id="link-admin" href="{{path('admin_home')}}">Admin</a>
							</li>
						{% endif %}
					</ul>
				</div>

                <!-- Logo Connexion en mode mobile portrait : -->
                <button id="butn_connect">
                    <ul id="logoconnect">
                        <li class="logoderoulant">
                            <i class="fas fa-user fa-2x"></i>
                            <i class="fas fa-sort-down"></i>
                            <ul class="sousmenu">
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                    <li>
                                        <a href="{{path('users')}}">Mon compte</a>
                                    </li>
                                    <li>
                                        <a href="{{path('app_logout')}}">Se déconnecter</a>
                                    </li>
                                {% else %}
                                    <li>
                                        <a href="{{path('app_register')}}">S'inscrire</a>
                                    </li>
                                    <li>
                                        <a href="{{path('app_login')}}">Se connecter</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </button>
			</nav>
		</header>

		{# Fin de ma div container-fluid de la nav #}
		{% block body %}{% endblock %}
<!-- FOOTER -->
    <footer>
        <div class="container-fluid bg-secondary">
            <p class=" float-end">
                <a href="#">Back to top</a>
            </p>
            <p>&copy; 2021 Company, Inc. &middot;
                <a href="#">Privacy</a>
                &middot;
                <a href="#">Terms</a>
            </p>
        </div>
    </footer>


        {# JS Bootstrap: #}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
        {# Fin JS Bootstrap: #}

        <script src="{{ asset('js/scripts.js') }}"></script>    
        <script src="{{ asset('js/navbar.js') }}"></script>

        {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </body>
</html>
