{# templates/main/contact.html.twig #}
{% extends "base.html.twig" %}

{% block title %}
	QG Animation | Contact
{% endblock %}

{% block stylesheets %}
	<link rel='stylesheet' type='text/css' media='screen' href="{{ asset('css/animations.css') }}">
{% endblock %}

{% block body %}

    {% for message in app.flashes('message') %}
		<div class="row">
			<div class="col-12 alert alert-success text-center" role="alert">{{message}}</div>
		</div>
	{% endfor %}

	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4  col-sm-12 my-3">

<h5>Vous souhaitez réaliser un évènement inoubliable ?</h5>
<p>
Contacter nous avec le formulaire ci dessous, on vous répond sous 24h !
</p>
            
				<h3>VOTRE DEMANDE D'ANIMATIONS:</h3>
				{{ form(form) }}
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}{% endblock %}
