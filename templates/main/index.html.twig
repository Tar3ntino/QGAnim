{% extends 'base.html.twig' %}

{% block title %}
	QG Animation | Accueil
{% endblock %}

{% block body %}

	<div class="container-fluid px-0">
		<div class="container px-0">
			<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
					{% set i = 0 %}
					{% for image in imagesCarousel %}
						{% if i == 0 %}
							<li data-target="#carouselExampleIndicators" data-slide-to="{{i}}" class="active"></li>
						{% else %}
							<li</span data-target="#carouselExampleIndicators" data-slide-to="{{i}}" </li> {% endif %} {% set i = i+1 %} {% endfor %} </ol> <div class="carousel-inner"> {% set i = 0 %} {% for image in imagesCarousel %} {% if i == 0 %} <div class="carousel-item active"> {% else %} <div class="carousel-item"> {% endif %} <img src="{{ asset('/uploads/' ~ image.name)}}" class="d-block w-100" alt="..."> </div> {% set i = i+1 %} {% endfor %} </div> <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true">>
								<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</a>
						</div>
					</div>
				</div>

				<div class="container-fluid text-center pt-3">
					<h2 id="titreDernieresAnimations">
						--------  Mes derni√®res animations  --------
					</h2>
				</div>

				<div class="container-fluid">
					<div class="row">
						{% for animation in animations|reverse [0:3] %}
							<div class="card col-md-4 col-sm-12 text-center" style="width: 18rem; margin: auto;">
								<img src="{{ asset('uploads/' ~ animation.images[0].name)|imagine_filter('square') }}" class="card-img-top" alt="{{ animation.title }}">
								<div class="card-body">
									<h5 class="card-title">
										{{ animation.title }}</h5>
									<p>
										Categorie :
										{{ animation.categories[0].name }}</p>
									<p class="card-text">
										{{ animation.scenario|striptags|u.truncate(50, '...') }}</p>
									<a href="#" class="btn btn-primary">
										+ d'infos
									</a>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			{% endblock %}
