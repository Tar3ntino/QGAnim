{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="container" id="containerTopPresentation">
        {% for presentation in presentations %}
			<div class="row">
				<div class="col-sm-4">
					<img src="{{ asset('/images/portrait_presentation.png') }}" alt="Photo de prÃ©sentation">
