{% extends 'base.html.twig' %}

{% block title %}
	Modifier la page de présentation
{% endblock %}

{% block body %}
	<div class="container-fluid">
		Modifier la page de présentation
	</div>

	<div class="container">
		<table class="table table-striped table-light">
			<thead>
				<tr>
					<th scope="col"></th>
					<th scope="col">Contenu actuel du site</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th scope="row">Image (haut)</th>
					<td>
						{{form_start(form)}}
						{{form_row(form.imageTop)}}
					</td>
				</tr>
				<tr>
					<th scope="row">Descriptif (haut page)</th>
					<td>{{form_row(form.topDescription)}}</td>
				</tr>
				<tr>
					<th scope="row">Descriptif (bas page)</th>
					<td>{{form_row(form.bottomDescription)}}</td>
				</tr>
				<tr>
					<th scope="row">Image (bas)</th>
					<td>
						{{form_row(form.imageBottom)}}
					</td>
				</tr>
				<tr>
					<th></th>
					<td>
						{{form_row(form.Valider)}}
					</td>
				</tr>
				{{form_end(form)}}
			</tbody>
		</table>

	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/images.js')}}"></script>
{% endblock %}
