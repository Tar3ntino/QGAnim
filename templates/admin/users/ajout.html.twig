{% extends 'base.html.twig' %}


{% block title %}
	{% if app.request.attributes.get('_route') == 'admin_users_modifier' %}
		Modifier un utilisateur
	{% else %}
		Ajouter un utilisateur
	{% endif %}
{% endblock %}

{% block body %}
	{% if app.request.attributes.get('_route') == 'admin_users_modifier' %}
		<h1 class="text-center mt-2">
			Modifier un utilisateur
		</h1>
	{% else %}
		<h1 class="text-center mt-2">
			Ajouter un utilisateur
		</h1>
	{% endif %}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 col-sm-12">{{form(form)}}</div>
        <div class="col-md-4"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/images.js')}}"></script>
{% endblock %}
