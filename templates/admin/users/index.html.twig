{% extends 'base.html.twig' %}

{% block title %}
	Gestion des utilisateurs
{% endblock %}

{% block body %}
	<h1 class="text-center mt-2">Gestion des utilisateurs</h1>
	<a class="btn btn-secondary" href="{{path("admin_users_ajout")}}" role="button">Ajouter un utilisateur</a>

	<!-- Modal -->
	<div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="modal-delete" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Confirmation de la suppression</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body"></div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
					<a href="" type="button" class="btn btn-primary">Oui</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
