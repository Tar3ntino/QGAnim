{% extends 'base.html.twig' %}

{% block title %}Gérer les animations {% endblock %}

{% block body %}
	<h1>Gérer les animations</h1>
    <a class="btn btn-secondary" href=" {{path("admin_animations_ajout")}}" role="button">Ajouter une animation</a>
	<table class="table table-striped table-dark my-1">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Titre</th>
				<th scope="col">Image</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Description</th>
                <th scope="col">Date création</th>
                <th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
        {% for animation in animations %}
			<tr>
				<td>{{animation.id}}</td>
                <td>{{animation.title}}</td>
                <td>
                    {% for image in animation.images %}
                        <img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="150">
                    {% endfor %}
                </td>
                <td>
                    {% for categorie in animation.categories %}
                        {{categorie}}
                    {% endfor %}
                </td>
                <td>{{animation.scenario | raw }}</td>
                <td>{{animation.createdAt|date}}</td>
				<td class="text-center">
                    <a class="btn btn-secondary my-1" href="{{path("admin_animations_modifier", {id: animation.id})}}" role="button">Modifier</a>

                <!-- Button trigger modal -->
                <a href="admin_animations_supprimer" type="button" class="btn btn-secondary modal-trigger-animation my-1" data-toggle="modal" data-target="#modal-delete" data-id="{{animation.id}}" data-titre="{{animation.title}}">Supprimer</a>
                </td>
			</tr>
        {% endfor %}
		</tbody>
	</table>

    <!-- Modal -->
    <div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="modal-delete" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer une animation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body"> </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                    <a href="" type="button" class="btn btn-primary">Oui</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
