{% extends 'base.html.twig' %}

{% block title %}Gestion du Carousel d'Accueil
{% endblock %}

{% block body %}
	<h1 class="text-center">Gestion du Carousel d'Accueil</h1>
	<a class="btn btn-secondary" href="{{path('admin_images_carousel_accueil_ajout')}}" role="button">Ajouter un slide</a>
	<table class="table table-striped table-dark my-1">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Aper√ßu</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for slideCarousel in imagesCarouselAccueil %}
				<tr>
					<td>{{slideCarousel.id}}</td>
					<td>
						<img src="{{ asset('/uploads/' ~ slideCarousel.name) }}" alt="Image" width="150">
					</td>
					<td class="text-center">
						<a class="btn btn-secondary my-1" href="{{path("admin_images_carousel_accueil_modifier", {id: slideCarousel.id})}}" role="button">Modifier</a>
						<!-- Button trigger modal -->
						<a href="admin_images_carousel_accueil_supprimer" type="button" class="btn btn-secondary modal-trigger-imgAccueil my-1" data-toggle="modal" data-target="#modal-delete" data-id="{{slideCarousel.id}}">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

            <!-- Modal -->
            <div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="modal-delete" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Supprimer une slide Carousel Accueil</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body"> </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                            <a href="" type="button" class="btn btn-primary">Oui</a>
                        </div>
                    </div>
                </div>
            </div>



{% endblock %}
