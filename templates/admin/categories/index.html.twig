{% extends 'base.html.twig' %}

{% block title %}Gérer les catégories{% endblock %}

{% block body %}

{% include('_partials/flashs.html.twig') %}

	<h1 class="text-center">Gérer les catégories</h1>
    <a class="btn btn-secondary" href=" {{path("admin_categories_ajout")}}" role="button">Ajouter une catégorie</a>
	<table class="table table-striped table-dark">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Nom</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
        {% for categorie in categories %}
			<tr>
				<td>{{categorie.id}}</th>
				<td>{{categorie.name}}</td>
				<td class="text-center">
                    <a class="btn btn-secondary" href="{{path("admin_categories_modifier", {slug: categorie.slug})}}" role="button">Modifier</a>
                    <a class="btn btn-secondary" href="{{path("admin_categories_supprimer", {slug: categorie.slug})}}" role="button">Supprimer</a>
                </td>
			</tr>
        {% endfor %}
		</tbody>
	</table>
{% endblock %}
